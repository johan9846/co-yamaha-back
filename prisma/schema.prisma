generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  status    String    @default("Activo")
  createdAt DateTime  @default(now())
  products  Product[]
}

model Product {
  id             Int       @id @default(autoincrement())
  category_id    Int?
  category       Category? @relation(fields: [category_id], references: [id], onDelete: SetNull)
  name           String
  oldPrice       Float
  price          Float
  rating         Float
  images         String[]
  description    String
  createdAt      DateTime  @default(now())
  quantity_stock Int       @default(1)
  brands         Brand[]   @relation("ProductBrands") // ðŸ”¹ RelaciÃ³n con Brand
}

model Brand {
  id        Int      @id @default(autoincrement())
  name      String
  productId Int
  product   Product  @relation("ProductBrands", fields: [productId], references: [id], onDelete: Cascade) // ðŸ”¹ RelaciÃ³n inversa a Product
  models    String[] // Lista de modelos asociados a la marca
}


model Order {
  id          String   @id @default(uuid())
  name        String
  last_name   String
  phone       String
  departament String
  city        String
  isPaid      Boolean  @default(false)
  address     String
  products    Json  // Se cambia de String[] a Json para almacenar objetos
  createdAt   DateTime @default(now())
}
