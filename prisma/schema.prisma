generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  status String @default("Activo") // ✅ Valor por defecto "active"
  createdAt DateTime @default(now()) // ✅ Se establece la fecha actual por defecto
  products Product[] // Relación uno a muchos con Product
}

model Product {
  id          Int       @id @default(autoincrement())
  brand       String
  model       String
  category_id Int?      // ✅ Ahora es opcional
  category    Category? @relation(fields: [category_id], references: [id], onDelete: SetNull) // ✅ Se permite NULL cuando se elimina la categoría
  name        String
  oldPrice    Float
  price       Float
  rating      Float
  image       String
  description String
  createdAt DateTime @default(now()) // ✅ Se establece la fecha actual por defecto
  quantity_stock Int    @default(1) 
}
